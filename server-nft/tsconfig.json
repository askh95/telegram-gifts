{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",        
      "moduleResolution": "node",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "telegram-gift-backend"],
    "exclude": ["node_modules", "dist", "tests"]
}